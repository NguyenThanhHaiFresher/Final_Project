<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    tools:context=".AddPDF">

    <TextView
        android:id="@+id/Choose_category"
        android:layout_width="262dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:hint="Choose Category"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="@drawable/box"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        app:layout_constraintEnd_toEndOf="@+id/Book_Description"
        app:layout_constraintStart_toStartOf="@+id/Book_Description"
        app:layout_constraintTop_toBottomOf="@+id/Book_Description" />

    <EditText
        android:id="@+id/Book_Description"
        android:layout_width="262dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/box"
        android:hint="Book Description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Book_Title"
        app:layout_constraintStart_toStartOf="@+id/Book_Title"
        app:layout_constraintTop_toBottomOf="@+id/Book_Title" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add PDF"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow" />

    <EditText
        android:id="@+id/Book_Title"
        android:layout_width="262dp"
        android:layout_height="54dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:background="@drawable/box"
        android:padding="10dp"
        android:hint="Book Title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/upload_pdf_btn"
        android:layout_width="262dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/blue_btn"
        android:text="UPLOAD"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Choose_category" />

    <ImageButton
        android:id="@+id/choose_pdf_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_file_attach" />
</androidx.constraintlayout.widget.ConstraintLayout>